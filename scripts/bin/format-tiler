#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Runs formatting for the tiler project.

This scripts is meant to be run inside the tiler-dev container.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    echo "Formatting tiler..."
    isort --overwrite-in-place tiler/tiler
    isort  --overwrite-in-place tiler/tests
    black tiler/tiler
    black tiler/tests
fi
