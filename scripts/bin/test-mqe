#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Runs tests for the mqe project.

Also checks formatting and runs mypy for pqecommon

This scripts is meant to be run inside the mqe-dev container.

"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then

    echo "Running  mypy for mqe..."
    mypy mqe/mqe

    echo "Running  mypy for pqecommon..."
    mypy pqecommon

    echo "Running black for mqe..."
    black --check mqe/mqe mqe/tests

    echo "Running black for pqecommon..."
    black --check pqecommon

    echo "Running flake8 for mqe..."
    flake8 mqe/mqe mqe/tests

    echo "Running unit tests for mqe..."
    python -m pytest mqe/tests

fi
