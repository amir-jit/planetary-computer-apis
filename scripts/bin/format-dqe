#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Runs formatting for the dqe project.

This scripts is meant to be run inside the dqe-dev container.

"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    echo "Formatting dqe project..."
    isort --overwrite-in-place dqe/dqe
    isort  --overwrite-in-place dqe/tests
    black dqe/dqe
    black dqe/tests
fi
