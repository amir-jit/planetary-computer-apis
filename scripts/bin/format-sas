#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Runs formatting for the sas project.

This scripts is meant to be run inside the sas-dev container.

"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    echo "Formatting sas project..."
    isort --overwrite-in-place sas/sas
    isort --overwrite-in-place sas/tests
    black sas/sas
    black sas/tests
fi
