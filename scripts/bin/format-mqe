#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Runs formatting for the mqe project, as well as pqecommon.

This scripts is meant to be run inside the mqe-dev container.
Note: There is no container needed for pqecommon, so mqe is used.

"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    echo "Formatting mqe project..."
    isort --overwrite-in-place mqe/mqe
    isort --overwrite-in-place mqe/tests
    black mqe/mqe
    black mqe/tests

    echo "Formatting pqecommon..."
    isort --overwrite-in-place pqecommon
    black pqecommon
fi
