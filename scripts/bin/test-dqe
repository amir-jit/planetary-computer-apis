#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Runs tests for the dqe project.

This scripts is meant to be run inside the dqe-dev container.

"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then

    echo "Running mypy for dqe..."
    mypy dqe/dqe

    echo "Running black for dqe..."
    black --check dqe/dqe dqe/tests

    echo "Running flake8 for dqe..."
    flake8 dqe/dqe dqe/tests

    echo "Running unit tests for dqe..."
    python -m unittest discover dqe/tests

fi
